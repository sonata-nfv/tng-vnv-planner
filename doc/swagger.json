          "description": "Status"
        },
        "test_plans": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TestPlan"
          }
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "uuid": {
          "type": "string",
          "description": "Test Set uuid"
        }
      },
      "title": "TestSet"
    }

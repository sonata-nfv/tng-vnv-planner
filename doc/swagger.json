  "definitions": {
    "Counter": {
      "type": "object",
      "properties": {
        "count": {
          "type": "integer",
          "format": "int64"
        }
      },
      "title": "Counter"
    },
    "CuratorCallback": {
      "type": "object",
      "required": [
        "event_actor",
        "status",
        "test_plan_uuid"
      ],
      "properties": {
        "event_actor": {
          "type": "string",
          "example": "Curator, Executor",
          "description": "Event Actor"
        },
        "exception": {
          "type": "string",
          "example": "run time exception",
          "description": "Test Plan Exception message"
        },
        "status": {
          "type": "string",
          "example": "STARTING, COMPLETED, CANCELLING, CANCELLED, ERROR",
          "description": "Test Plan Status"
        },
        "test_plan_uuid": {
          "type": "string",
          "description": "Test Plan uuid"
        },
        "test_results": {
          "type": "array",
          "description": "Test Plan Result List",
          "items": {
            "$ref": "#/definitions/TestResult"
          }
        }
      },
      "title": "CuratorCallback"
    },
    "PackageCallback": {
      "type": "object",
      "required": [
        "event_name",
        "package_id"
      ],
      "properties": {
        "confirm_required": {
          "type": "string",
          "example": true,
          "description": "Additional validation step before every test plan progresses towards execution"
        },
        "event_name": {
          "type": "string",
          "example": "UPDATED",
          "description": "Event Name"
        },
        "package_id": {
          "type": "string",
          "description": "The reference id of the uploaded package that will generate test plans as pair of network services and tests"
        },
        "package_location": {
          "type": "string"
        }
      },
      "title": "PackageCallback"
    },
    "TestPlan": {
      "type": "object",
      "properties": {
        "confirm_required": {
          "type": "boolean",
          "description": "Does TestPlan require confirmation?"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "description": {
          "type": "string",
          "description": "Description"
        },
        "service_name": {
          "type": "string",
          "description": "Network service name"
        },
        "service_uuid": {
          "type": "string",
          "description": "Network service uuid"
        },
        "test_name": {
          "type": "string",
          "description": "Test descriptor name"
        },
        "test_result_uuid": {
          "type": "string",
          "description": "Test result uuid"
        },
        "test_set_uuid": {
          "type": "string",
          "description": "Test Set uuid to which it belongs"
        },
        "test_status": {
          "type": "string",
          "description": "Test Status"
        },
        "test_uuid": {
          "type": "string",
          "description": "Test descriptor uuid"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "uuid": {
          "type": "string",
          "description": "Test Plan uuid"
        }
      },
      "title": "TestPlan"
    },
    "TestResult": {
      "type": "object",
      "required": [
        "test_result_uuid",
        "test_status",
        "test_uuid"
      ],
      "properties": {
        "test_result_uuid": {
          "type": "string",
          "description": "Test result uuid"
        },
        "test_status": {
          "type": "string",
          "example": "STARTING, COMPLETED, CANCELLING, CANCELLED, ERROR",
          "description": "Test Plan Status"
        },
        "test_uuid": {
          "type": "string",
          "description": "Test uuid"
        }
      },
      "title": "TestResult"
    },
    "TestSet": {
      "type": "object",
      "properties": {
        "confirm_required": {
          "type": "boolean",
          "description": "Does any TestPlan require confirmation?"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "request_type": {
          "type": "string",
          "description": "Request type"
        },
        "request_uuid": {
